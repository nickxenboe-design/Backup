<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#f0f9ff',
                100: '#e0f2fe',
                200: '#bae6fd',
                300: '#7dd3fc',
                400: '#38bdf8',
                500: '#0ea5e9',
                600: '#0284c7',
                700: '#0369a1',
                800: '#075985',
                900: '#0c4a6e',
              }
            }
          }
        }
      };
    </script>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 0; color: #0f172a; background: #f8fafc; }
      .wrap { max-width: 720px; margin: 0 auto; padding: 24px; }
      h1 { font-size: 22px; margin: 0 0 12px; }
      .card { border: 1px solid #e2e8f0; border-radius: 10px; padding: 16px; background: #fff; box-shadow: 0 10px 25px rgba(2,6,23,.06); }
      label { font-size: 12px; color: #475569; display: block; margin-bottom: 6px; }
      input[type="email"] { width: 100%; padding: 10px; border: 1px solid #e2e8f0; border-radius: 6px; }
      .row { display: flex; align-items: center; gap: 10px; }
      button { border: 0; border-radius: 6px; padding: 10px 14px; font-weight: 700; cursor: pointer; }
      .primary { background: #2563eb; color: white; }
      .secondary { background: #0f172a; color: white; }
      .muted { color: #64748b; font-size: 12px; }
      .error { color: #dc2626; font-size: 13px; min-height: 18px; }
      .success { color: #16a34a; font-size: 13px; min-height: 18px; }
      .topbar { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px; }
      a.link { color: #2563eb; text-decoration: none; font-weight: 600; }
    </style>
  </head>
  <body>
  <div class="wrap max-w-2xl mx-auto p-6">
    <div class="flex items-center justify-between mb-6">
      <a href="/admin" class="text-primary-600 hover:text-primary-700 font-semibold inline-flex items-center gap-2"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
      <a href="/admin/users" class="text-primary-600 hover:text-primary-700 font-semibold inline-flex items-center gap-2"><i class="fas fa-users-cog"></i> Manage Users</a>
    </div>

    <h1 class="text-2xl font-bold text-slate-900 mb-2">Register Admin</h1>
    <div class="text-sm text-slate-600 mb-3">Create an admin account with email and password. A verification email will be sent.</div>

    <div class="bg-white border border-slate-200 rounded-xl shadow-lg p-6">
      <div class="flex items-end gap-4">
        <div class="flex-1">
          <label for="email" class="text-sm text-slate-600">Admin email</label>
          <input id="email" type="email" placeholder="admin@example.com" class="mt-1 w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
        </div>
        <div class="flex-1">
          <label for="password" class="text-sm text-slate-600">Password (min 6 chars)</label>
          <input id="password" type="password" placeholder="••••••" class="mt-1 w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
        </div>
        <div class="flex items-center gap-2">
          <button id="addBtn" class="inline-flex items-center justify-center rounded-md bg-primary-600 hover:bg-primary-700 text-white font-semibold px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-500">Register</button>
        </div>
      </div>
      <div id="statusMsg" class="text-sm text-slate-600 mt-2"></div>
      <div id="errorMsg" class="text-sm text-red-600"></div>
    </div>
  </div>

  <script>
    (function(){
      const emailEl = document.getElementById('email');
      const addBtn = document.getElementById('addBtn');
      const passwordEl = document.getElementById('password');
      const statusMsg = document.getElementById('statusMsg');
      const errorMsg = document.getElementById('errorMsg');

      async function add(){
        statusMsg.textContent = '';
        errorMsg.textContent = '';
        const email = (emailEl.value || '').trim();
        const password = (passwordEl.value || '').trim();
        if (!email) { errorMsg.textContent = 'Email is required'; return; }
        if (!password || password.length < 6) { errorMsg.textContent = 'Password must be at least 6 characters'; return; }
        addBtn.disabled = true;
        const prevText = addBtn.textContent;
        addBtn.textContent = 'Registering...';
        addBtn.classList.add('opacity-50','cursor-not-allowed');
        try {
          const res = await fetch('/api/admins/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
          });
          const data = await res.json();
          if (!res.ok || !data.success) throw new Error(data.message || data.error || 'Registration failed');
          if (data.verificationSent === false && data.verificationLink) {
            statusMsg.innerHTML = `Registration successful. Email sending failed in this environment.<br/>Click to verify now: <a class="text-primary-600 underline" href="${data.verificationLink}" target="_blank" rel="noopener">Verify Email</a>`;
          } else {
            statusMsg.textContent = 'Registration successful. A verification email has been sent. Please check your inbox.';
          }
          emailEl.value = '';
          passwordEl.value = '';
        } catch (err) {
          errorMsg.textContent = err.message || 'Registration failed';
        } finally {
          addBtn.disabled = false;
          addBtn.textContent = prevText;
          addBtn.classList.remove('opacity-50','cursor-not-allowed');
        }
      }

      addBtn && addBtn.addEventListener('click', add);
    })();
  </script>
</body>
</html>
