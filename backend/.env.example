# ====================================
# Essential Configuration
# ====================================

# Application Environment
NODE_ENV=development
PORT=5000


# Authentication
JWT_SECRET=your_secure_jwt_secret_here
SESSION_SECRET=your_secure_session_secret_here

# Busbud API
BUSBUD_PUBLIC_TOKEN=your_busbud_public_token_here
BUSBUD_BASE_URL=https://napi-preview.busbud.com

# CORS / Hosts (production)
# Comma-separated. If empty in production, server.js falls back to CLIENT_URL/CHATBOT_URL/WHATSAPP_WEBHOOK_URL.
CLIENT_URL=https://your-frontend-domain.example
ALLOWED_ORIGINS=https://your-frontend-domain.example
ALLOWED_HOSTS=your-api-domain.example

# Logging
LOG_LEVEL=info

# Postgres
DATABASE_URL=postgres://user:password@host:5432/dbname

# ====================================
# Optional Configuration (with defaults)
# ====================================

# API Configuration
API_PREFIX=/api
API_VERSION=1.0

# Rate Limiting
RATE_LIMIT_MAX=600
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour

# Cache
CACHE_ENABLED=true
CACHE_TTL_MS=300000  # 5 minutes

# Monitoring
MONITORING_ENABLED=false

# ====================================
# Development Settings
# ====================================
# NODE_ENV=development
# DEBUG=app:*,api:*,error:*
# NODE_TLS_REJECT_UNAUTHORIZED=0  # Only for development

# Theme Configuration
THEME_PRIMARY=#008000
THEME_ACCENT=#008000
VITE_DEFAULT_THEME=light

NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id



# Firebase Admin (do NOT commit real keys)
# Provide one of the following securely at runtime:
# 1) FIREBASE_SERVICE_ACCOUNT: base64-encoded JSON of the service account
# 2) FIREBASE_CREDENTIALS_FILE: absolute path to a serviceAccountKey.json mounted via secret
# Example placeholders:
FIREBASE_SERVICE_ACCOUNT=BASE64_ENCODED_JSON_HERE
FIREBASE_CREDENTIALS_FILE=/run/secrets/serviceAccountKey.json